@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Lateral Mejorado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: #f0f0f0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: radial-gradient(circle, black, #116244);
            color: white;
            padding-top: 20px;
            position: fixed;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.3);
            transition: width 0.3s ease-in-out;
            border-radius: 0 20px 20px 0;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 15px;
                font-size: 24px;
                text-transform: uppercase;
                letter-spacing: 1.5px;
                font-weight: bold;
                font-family: 'Poppins', sans-serif;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                color: #ffffff;
                position: relative;
                padding-bottom: 10px;
            }

                .sidebar h2::after {
                    content: "";
                    display: block;
                    width: 50px;
                    height: 3px;
                    background: #fff;
                    margin: 5px auto 0;
                    border-radius: 5px;
                }


        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                padding: 15px 20px;
                cursor: pointer;
                transition: all 0.3s ease;
                border-left: 4px solid transparent;
                border-radius: 10px;
                margin: 5px;
            }

                .menu li:hover {
                    background: rgba(255, 255, 255, 0.1);
                    transform: translateX(8px);
                    border-left: 4px solid #a1e3b0;
                }

                .menu li a {
                    color: white;
                    text-decoration: none;
                    display: block;
                    font-weight: 500;
                    transition: color 0.3s ease;
                }

                .menu li:hover a {
                    color: #dff;
                }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Menú</h2>
        <ul class="menu">
            <li><a href="#">Mantenimiento</a></li>
            <li><a href="#">Categorías</a></li>
            <li><a href="#">Subcategorías</a></li>
            <li><a href="#">Establecimientos</a></li>
            <li><a href="#">Usuarios</a></li>
            <li><a href="#">Perfiles</a></li>
            <li><a href="#">Control Perfil</a></li>
            <li><a href="#">Ticket</a></li>
            <li><a href="#">Ver pendientes</a></li>
            <li><a href="#">Ver solucionados</a></li>
            <li><a href="#">Ver cancelados</a></li>
            <li><a href="#">Ver derivados</a></li>
        </ul>
    </div>
</body>
</html>