@{Layout = null;}

@model Eco_Toner.Models.IngresoCliente

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
    body {
        margin: 0;
        font-family: 'Arial', sans-serif;
        background: #f0f0f0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    
    /* Barra superior */
    .top-bar {
        height: 60px;
        background: #f8f9fa;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 0 20px;
        position: fixed;
        top: 0;
        right: 0;
        left: 250px;
        z-index: 100;
    }
    
    .user-info {
        display: flex;
        align-items: center;
        margin-right: 15px;
    }
    
    .user-info .user-name {
        margin-right: 10px;
        font-weight: 500;
    }
    
    .logout-btn {
        padding: 6px 15px;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
    }
    
    /* Sidebar */
    .sidebar {
        width: 250px;
        height: 100vh;
        background: radial-gradient(circle, black, #116244);
        color: white;
        padding-top: 20px;
        position: fixed;
        box-shadow: 4px 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 0 20px 20px 0;
        z-index: 200;
    }
    
    .sidebar h2 {
        text-align: center;
        margin-bottom: 15px;
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        font-weight: bold;
        font-family: 'Poppins', sans-serif;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }
    
    .menu {
        list-style: none;
        padding: 0;
    }
    
    .menu li {
        padding: 15px 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
        border-radius: 10px;
        margin: 5px;
    }
    
    .menu li:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(8px);
        border-left: 4px solid #a1e3b0;
    }
    
    .menu li a {
        color: white;
        text-decoration: none;
        display: block;
        font-weight: 500;
        transition: color 0.3s ease;
    }
    
    .menu li:hover a {
        color: #dff;
    }
    
    /* Contenido */
    .content {
        margin-left: 250px;
        margin-top: 60px;
        padding: 20px;
        width: calc(100% - 250px);
        min-height: calc(100vh - 60px);
    }
    
    /* Formulario */
    .form-container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .form-section {
        margin-bottom: 20px;
    }
    
    .form-section h4 {
        margin-bottom: 15px;
        font-size: 1.2rem;
        color: #333;
    }
    
    .form-control, .form-select {
        margin-bottom: 15px;
        width: 100%;
    }
    
    .btn-guardar {
        padding: 8px 20px;
        background-color: #28a745;
        color: white;
        border: none;
        font-weight: bold;
        min-width: 150px;
    }
    
    /* Media Queries para responsividad */
    @@media (max-width: 992px) {
        .sidebar {
            width: 200px;
        }
        
        .top-bar {
            left: 200px;
        }
        
        .content {
            margin-left: 200px;
            width: calc(100% - 200px);
        }
    }
    
    @@media (max-width: 768px) {
        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
            border-radius: 0;
        }
        
        .top-bar {
            position: relative;
            left: 0;
            justify-content: center;
        }
        
        .content {
            margin-left: 0;
            width: 100%;
            margin-top: 20px;
        }
        
        .form-container {
            padding: 15px;
        }
        
        .menu {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .menu li {
            padding: 10px 15px;
            margin: 5px;
        }
        
        .menu li:hover {
            transform: translateY(3px);
        }
    }
    
    @@media (max-width: 576px) {
        .top-bar {
            flex-direction: column;
            height: auto;
            padding: 10px;
        }
        
        .user-info {
            margin-right: 0;
            margin-bottom: 10px;
        }
        
        .form-container {
            padding: 10px;
        }
        
        .row {
            flex-direction: column;
        }
        
        .col-md-6 {
            width: 100%;
            max-width: 100%;
        }
    }
</style>
</head>
<body>

    <div class="sidebar">
        <h2>Menú</h2>
        <ul class="menu">
            <li><a href="@Url.Action("FormularioTicket","FormularioTicket")">Crear Ticket</a></li>
            <li><a href="@Url.Action("TicketsAtendidosSC","ReporteTicketsAtendidos")">Reporte de Tickets</a></li>

            <li><a href="@Url.Action("IngresoCliente","IngresoCliente")">Registrar Cliente</a></li>

        </ul>
    </div>

    <!-- Barra superior -->
    <div class="top-bar">
        <div class="user-info">
            <span class="user-name">@ViewBag.usuario</span>
            <i class="bi bi-person-circle me-2"></i>
        </div>
        <button class="logout-btn" onclick="location.href='@Url.Action("CerrarSesion","Home")'">
            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
        </button>
    </div>

    <!-- Sidebar y Top-Bar (mantienen el mismo estilo que en tu código original) -->

    <div class="container">
        <div class="form-container">
            <div class="form-section">
                <h4 class="text-center">Datos Personales</h4>

                <!-- Formulario para ingresar datos personales y selección de empresa y oficina -->
                <form asp-action="IngresoCliente" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Selección de Empresa -->
                    <div class="form-section mt-3">
                        <label for="empresaSelect">Seleccione una empresa:</label>
                        <select asp-for="EmpresaSeleccionada" class="form-control">
                            <option value="">-- Seleccione Empresa --</option>
                            @foreach (var empresa in Model.Empresas)
                            {
                                <option value="@empresa" selected="@(empresa == Model.EmpresaSeleccionada)">
                                    @empresa
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Botón para buscar oficinas -->
                    <div class="form-section mt-3 text-center">
                        <button type="submit" class="btn btn-primary" name="accion" value="BuscarOficinas">Buscar Oficinas</button>
                    </div>

                    <!-- Mostrar oficinas si están disponibles -->
                    @if (Model.Oficinas != null && Model.Oficinas.Any())
                    {
                        <div class="form-section mt-3">
                            <label for="oficinaSelect">Seleccione una oficina:</label>
                            <select id="oficinaSelect" name="OficinaSeleccionada" class="form-control">
                                @foreach (var oficina in Model.Oficinas)
                                {
                                    <option value="@oficina">@oficina</option>
                                }
                            </select>
                        </div>
                    }

                    <!-- Datos Personales -->
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="form-group">
                                <label for="nombreCliente">Nombre:</label>
                                <input type="text" id="nombreCliente" name="Nombre" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="apellidoCliente">Apellido:</label>
                                <input type="text" id="apellidoCliente" name="Apellido" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="correoCliente">Correo:</label>
                                <input type="email" id="correoCliente" name="Correo" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Botón para registrar cliente -->
                    <div class="form-section mt-3 text-center">
                        <button type="submit" class="btn btn-primary" name="accion" value="RegistrarCliente">Registrar Cliente</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


        <!-- Mensajes de éxito o error -->
        @if (TempData["MensajeExitoRegistro"] != null)
        {
            <div class="alert alert-success mt-3 text-center">
                @TempData["MensajeExitoRegistro"]
            </div>
        }

        @if (TempData["MensajeErrorRegistro"] != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @TempData["MensajeErrorRegistro"]
            </div>
        }
    </div>


    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>