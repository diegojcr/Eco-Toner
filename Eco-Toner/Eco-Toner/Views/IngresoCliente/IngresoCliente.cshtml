@{Layout = null;}

@model Eco_Toner.Models.IngresoCliente

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: #f0f0f0;
            display: flex;
            flex-direction: column;
        }
        /* Barra superior */
        .top-bar {
            height: 60px;
            background: #f8f9fa;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            right: 0;
            left: 250px;
            z-index: 100;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-right: 20px;
        }

            .user-info .user-name {
                margin-right: 10px;
                font-weight: 500;
            }

        .logout-btn {
            padding: 6px 15px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: radial-gradient(circle, black, #116244);
            color: white;
            padding-top: 20px;
            position: fixed;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 0 20px 20px 0;
            z-index: 200;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 15px;
                font-size: 24px;
                text-transform: uppercase;
                letter-spacing: 1.5px;
                font-weight: bold;
                font-family: 'Poppins', sans-serif;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            }

        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                padding: 15px 20px;
                cursor: pointer;
                transition: all 0.3s ease;
                border-left: 4px solid transparent;
                border-radius: 10px;
                margin: 5px;
            }

                .menu li:hover {
                    background: rgba(255, 255, 255, 0.1);
                    transform: translateX(8px);
                    border-left: 4px solid #a1e3b0;
                }

                .menu li a {
                    color: white;
                    text-decoration: none;
                    display: block;
                    font-weight: 500;
                    transition: color 0.3s ease;
                }

                .menu li:hover a {
                    color: #dff;
                }
        /* Contenido */
        .content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
            width: calc(100% - 250px);
            min-height: calc(100vh - 60px);
        }
        /* Formulario */
        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .form-section {
            margin-bottom: 20px;
        }

            .form-section h4 {
                margin-bottom: 15px;
                font-size: 18px;
                color: #333;
            }

        .form-control, .form-select {
            margin-bottom: 15px;
        }

        .btn-guardar {
            padding: 8px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            font-weight: bold;
            min-width: 150px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Menú</h2>
        <ul class="menu">
            <li><a href="@Url.Action("IngresoCliente","IngresoCliente")">Registrar Cliente</a></li>
        </ul>
    </div>

    <!-- Barra superior -->
    <div class="top-bar">
        <div class="user-info">
            <span class="user-name">@ViewBag.usuario</span>
            <i class="bi bi-person-circle me-2"></i>
        </div>
        <button class="logout-btn" onclick="location.href='@Url.Action("CerrarSesion","Home")'">
            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
        </button>
    </div>

    <!-- Sidebar y Top-Bar (mantienen el mismo estilo que en tu código original) -->

    <div class="content">
        <form asp-action="FormularioCliente" method="post">
            @Html.AntiForgeryToken()
            <div class="form-container">
                <div class="form-section">
                    <h4>Datos Personales</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" class="form-control" asp-for="Nombre" placeholder="Nombre">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" asp-for="Apellido" placeholder="Apellido">
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="email" class="form-control" asp-for="Correo" placeholder="Correo electrónico">
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                </div>
                </form>
<!-- Resto de tu HTML -->

<div class="form-group">
    <label>Empresa</label>
    <select asp-for="EmpresaSeleccionada" id="empresaSelect" class="form-control" required>
        <option value="">Seleccione una empresa</option>
        @foreach (var emp in Model.Empresas)
        {
            <option value="@emp">@emp</option>
        }
    </select>
    <span asp-validation-for="EmpresaSeleccionada" class="text-danger"></span>
</div>

<div class="form-group">
    <label>Oficina</label>
    <select asp-for="OficinaSeleccionada" id="oficinaSelect" class="form-control" required disabled>
        <option value="">Primero seleccione una empresa</option>
    </select>
    <span asp-validation-for="OficinaSeleccionada" class="text-danger"></span>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#empresaSelect').change(function() {
                var empresa = $(this).val();
                var oficinaSelect = $('#oficinaSelect');

                if (empresa) {
                    $.ajax({
                        url: '@Url.Action("ObtenerOficinas", "IngresoCliente")',
                        type: 'GET',
                        data: { empresa: empresa },
                        success: function(response) {
                            if (response.success) {
                                oficinaSelect.empty();
                                oficinaSelect.append('<option value="">Seleccione una oficina</option>');
                                
                                $.each(response.data, function(index, item) {
                                    oficinaSelect.append($('<option>', {
                                        value: item,
                                        text: item
                                    }));
                                });
                                
                                oficinaSelect.prop('disabled', false);
                            } else {
                                mostrarError('Error al cargar oficinas: ' + response.message);
                            }
                        },
                        error: function() {
                            mostrarError('Error en la comunicación con el servidor');
                        }
                    });
                } else {
                    oficinaSelect.empty();
                    oficinaSelect.append('<option value="">Primero seleccione una empresa</option>');
                    oficinaSelect.prop('disabled', true);
                }
            });

            function mostrarError(mensaje) {
                // Implementa tu lógica para mostrar errores al usuario
                console.error(mensaje);
                alert(mensaje);
            }
        });
    </script>
}
    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>