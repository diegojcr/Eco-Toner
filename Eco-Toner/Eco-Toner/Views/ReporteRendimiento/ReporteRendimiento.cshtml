@{
    Layout = null;
}
@model Eco_Toner.Models.ReporteDesempenoUsuarioViewModel
@{
    ViewData["Title"] = "Reporte de Desempeño";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard de Desempeño</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Estilos personalizados */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: #f0f0f0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: radial-gradient(circle, black, #116244);
            color: white;
            padding-top: 20px;
            position: fixed;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 0 20px 20px 0;
        }

            .sidebar h2 {
                text-align: center;
                font-size: 24px;
                text-transform: uppercase;
                font-weight: bold;
                font-family: 'Poppins', sans-serif;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            }

        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                padding: 15px 20px;
                cursor: pointer;
                transition: all 0.3s ease;
                border-left: 4px solid transparent;
                border-radius: 10px;
                margin: 5px;
            }

                .menu li:hover {
                    background: rgba(255, 255, 255, 0.1);
                    transform: translateX(8px);
                    border-left: 4px solid #a1e3b0;
                }

                .menu li a {
                    color: white;
                    text-decoration: none;
                    display: block;
                    font-weight: 500;
                    transition: color 0.3s ease;
                }

        .content-section {
            margin-left: 260px;
            padding: 80px 40px 40px;
            color: #333;
        }

        .modal-content {
            border-radius: 10px;
        }

        .btn-primary {
            border: 2px solid black;
            background-color: white;
            color: black;
            padding: 8px 16px;
            font-size: 16px;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #007BFF;
                color: white;
                border-color: #007BFF;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            }

        .top-bar {
            height: 60px;
            background: #f8f9fa;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            right: 0;
            left: 250px;
            z-index: 100;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-right: 20px;
        }

            .user-info .user-name {
                margin-right: 10px;
                font-weight: 500;
            }

        .logout-btn {
            padding: 6px 15px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .filtro-container {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            text-align: center;
        }

        .filtro-form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }

        .filtro-group {
            display: flex;
            flex-direction: column;
        }

            .filtro-group label {
                font-weight: bold;
                margin-bottom: 5px;
                color: #333;
            }

            .filtro-group input {
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                text-align: center;
            }

        .filtro-buttons {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .btn-filtrar, .btn-limpiar {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
            text-decoration: none;
        }

        .btn-filtrar {
            background-color: #007bff;
            color: white;
        }

            .btn-filtrar:hover {
                background-color: #0056b3;
            }

        .btn-limpiar {
            background-color: #dc3545;
            color: white;
        }

            .btn-limpiar:hover {
                background-color: #a71d2a;
            }

        h2 {
            color: #333;
        }

        .ticket-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .ticket-card {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .ticket-card p {
                margin: 8px 0;
                font-size: 16px;
                color: #555;
            }

        .no-tickets-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px;
        }

        .no-tickets-card {
            background: #ffe4e4;
            padding: 15px;
            border-radius: 10px;
            color: #b30000;
            font-weight: bold;
            text-align: center;
        }

        .num-Tickets {
            font-size: 18px;
            font-weight: bold;
            color: #28a745;
            display: block;
            text-align: center;
            margin-bottom: 10px;
        }

        .ticket-card {
            width: 90%;
        }

        .toast {
            transition: opacity 0.5s ease;
        }

        .btn-filtrar {
            background: linear-gradient(to right, #116244, #1a936f);
            border: none;
            color: white;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-filtrar:hover {
                background: linear-gradient(to right, #0d5034, #116244);
                transform: translateY(-2px);
                box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            }
        /* Estilo general de la tabla */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

            /* Encabezado de la tabla */
            .table thead {
                background-color: #007bff;
                color: #fff;
                text-align: left;
            }

                .table thead th {
                    padding: 12px;
                    font-weight: bold;
                }

            /* Filas de la tabla */
            .table tbody tr {
                border-bottom: 1px solid #ddd;
            }

                .table tbody tr:nth-child(even) {
                    background-color: #f8f9fa;
                }

            /* Celdas de la tabla */
            .table td {
                padding: 12px;
                color: #333;
            }

            /* Efecto hover */
            .table tbody tr:hover {
                background-color: #e2e6ea;
                cursor: pointer;
            }

        /* Contenedor de la tabla */
        .table-responsive {
            overflow-x: auto;
            margin-top: 10px;
        }

        /* Mensaje cuando no hay datos */
        .no-tickets-wrapper {
            text-align: center;
            margin-top: 20px;
        }

        .no-tickets-card {
            background-color: #ffc107;
            color: #333;
            padding: 15px;
            border-radius: 8px;
            font-weight: bold;
            display: inline-block;
        }

        /* Título del reporte */
        .content-section h2 {
            color: #007bff;
            font-weight: bold;
        }

        .filtro-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .filtro-form {
            display: flex;
            align-items: flex-end;
            gap: 15px; /* Espaciado entre los elementos */
            flex-wrap: wrap;
        }

        .filtro-group {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            height: 38px; /* Ajustar la altura de los inputs */
        }

        .filtro-buttons {
            display: flex;
            gap: 10px; /* Espaciado entre botones */
        }

        .btn-filtrar, .btn-limpiar {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 38px; /* Asegurar la misma altura que los inputs */
            padding: 8px 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .btn-filtrar {
            background-color: #198754; /* Verde */
            color: white;
            border-radius: 5px;
        }

        .btn-limpiar {
            background-color: #dc3545; /* Rojo */
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-filtrar i, .btn-limpiar i {
                margin-right: 5px;
            }


        

    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Menú</h2>
        <ul class="menu">
            <li><a href="@Url.Action("ImpresorasConErrores","ReporteImpresora")">Reporte Impresoras</a></li>
            <li><a href="@Url.Action("TicketsAtendidos","ReporteTicketsAtendidos")">Reporte de Tickets</a></li>
            <li><a href="@Url.Action("ReporteRendimiento","ReporteRendimiento")">Reporte Rendimiento</a></li>
        </ul>
    </div>

    <div class="top-bar">
        <div class="user-info">
            <span class="user-name">@ViewBag.usuario</span>
            <i class="bi bi-person-circle me-2"></i>
        </div>
        <button class="logout-btn" onclick="location.href='@Url.Action("CerrarSesion","Home")'">
            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
        </button>
    </div>

    <h2 class="text-center mb-4">Reporte de Desempeño del Usuario</h2>

    <!-- Formulario de Filtrado -->
    <div class="filtro-container">
        <form asp-action="Filtrar" method="post" class="filtro-form">
            <div class="filtro-group">
                <label for="Usuario" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="Usuario" name="Usuario"
                       value="@ViewBag.usuario" required>
            </div>
            
            <div class="filtro-group">
                <label for="FechaInicio" class="form-label">Fecha Inicio</label>
                <input type="date" class="form-control" id="FechaInicio" name="FechaInicio"
                       value="@(ViewBag.Filtro?.FechaInicio?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
                       max="@DateTime.Now.ToString("yyyy-MM-dd")">
            </div>

            <div class="filtro-group">
                <label for="FechaFin" class="form-label">Fecha Fin</label>
                <input type="date" class="form-control" id="FechaFin" name="FechaFin"
                       value="@(ViewBag.Filtro?.FechaFin?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
                       max="@DateTime.Now.ToString("yyyy-MM-dd")">
            </div>

            <div class="filtro-buttons">
                <button type="submit" class="btn-filtrar">
                    <i class="bi bi-funnel-fill"></i> Filtrar
                </button>
                @if (ViewBag.AplicarFiltro == true)
                {
                    <a href="@Url.Action("ReporteRendimiento")" class="btn-limpiar">
                        <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                    </a>
                }
            </div>
        </form>
    </div>


    <!-- Sección de Reporte -->
    <div class="content-section">
        <h2 class="mb-4 text-center">Desempeño del Usuario</h2>
        <div class="ticket-container">
            <div class="row">
                @if (Model != null && Model.Reportes.Any())
                {
                    <span class="num-Tickets">El usuario ha completado @ViewBag.CantidadTrabajos tareas.</span>
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Usuario</th>
                                        <th>Rol</th>
                                        <th>Trabajos Completados</th>
                                        <th>Tiempo de Trabajo (días)</th>
                                        <th>Tiempo de Asignación (días)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Reportes)
                                    {
                                        <tr>
                                            <td>@item.Nombre @item.Apellido</td>
                                            <td>@item.Usuario</td>
                                            <td>@item.Rol</td>
                                            <td>@item.TrabajosCompletos</td>
                                            <td>@item.TiempoDeTrabajo</td>
                                            <td>@item.TiempoDeAsignacion</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @if (ViewBag.AplicarFiltro == true)
                    {
                        <div class="text-muted mt-3">
                            Mostrando resultados del @(ViewBag.Filtro?.FechaInicio?.ToShortDateString() ?? "Sin fecha")
                            al @(ViewBag.Filtro?.FechaFin?.ToShortDateString() ?? "Sin fecha").
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 no-tickets-wrapper">
                        <div class="no-tickets-card">
                            Ingresa fechas y un usuario para ver el desempeño.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
