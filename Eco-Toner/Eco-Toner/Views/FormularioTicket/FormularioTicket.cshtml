@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario con Menú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: #f0f0f0;
            display: flex;
            flex-direction: column;
        }

        /* Barra superior nueva */
        .top-bar {
            height: 60px;
            background: #f8f9fa;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            right: 0;
            left: 250px; /* Mismo ancho que el sidebar */
            z-index: 100;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-right: 20px;
        }

            .user-info .user-name {
                margin-right: 10px;
                font-weight: 500;
            }

        .logout-btn {
            padding: 6px 15px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        /* Sidebar original con ajustes */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: radial-gradient(circle, black, #116244);
            color: white;
            padding-top: 20px;
            position: fixed;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 0 20px 20px 0;
            z-index: 200;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 15px;
                font-size: 24px;
                text-transform: uppercase;
                letter-spacing: 1.5px;
                font-weight: bold;
                font-family: 'Poppins', sans-serif;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            }

        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                padding: 15px 20px;
                cursor: pointer;
                transition: all 0.3s ease;
                border-left: 4px solid transparent;
                border-radius: 10px;
                margin: 5px;
            }

                .menu li:hover {
                    background: rgba(255, 255, 255, 0.1);
                    transform: translateX(8px);
                    border-left: 4px solid #a1e3b0;
                }

                .menu li a {
                    color: white;
                    text-decoration: none;
                    display: block;
                    font-weight: 500;
                    transition: color 0.3s ease;
                }

                .menu li:hover a {
                    color: #dff;
                }

        /* Contenedor modificado para ocupar todo el ancho disponible */
        .content {
            margin-left: 250px;
            margin-top: 60px; /* Añadido para dar espacio a la barra superior */
            padding: 20px;
            width: calc(100% - 250px);
            min-height: calc(100vh - 60px);
        }

        /* Formulario modificado para ocupar más espacio horizontal */
        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        /* Secciones del formulario */
        .form-section {
            margin-bottom: 20px;
        }

            .form-section h4 {
                margin-bottom: 15px;
                font-size: 18px;
                color: #333;
            }

        /* Espaciado entre campos */
        .form-control, .form-select {
            margin-bottom: 15px;
        }

        /* Botón adaptado al estilo */
        .btn-guardar {
            padding: 8px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            font-weight: bold;
            min-width: 150px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Menú</h2>
        <ul class="menu">
            <li><a href="#">Mantenimiento</a></li>
            <li><a href="#">Categorías</a></li>
            <li><a href="#">Subcategorías</a></li>
            <li><a href="#">Establecimientos</a></li>
            <li><a href="#">Usuarios</a></li>
            <li><a href="#">Perfiles</a></li>
            <li><a href="#">Control Perfil</a></li>
            <li><a href="#">Ticket</a></li>
            <li><a href="#">Ver pendientes</a></li>
            <li><a href="#">Ver solucionados</a></li>
            <li><a href="#">Ver cancelados</a></li>
            <li><a href="#">Ver derivados</a></li>
        </ul>
    </div>

    <!-- Nueva barra superior -->
    <div class="top-bar">
        <div class="user-info">
            <span class="user-name">Admin Usuario</span>
            <i class="bi bi-person-circle me-2"></i>
        </div>
        <button class="logout-btn">
            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
        </button>
    </div>

    <div class="content">
        <div class="form-container">
            <div class="form-section">
                <h4>Datos Personales</h4>
                <div class="row">
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Ingrese el correo del Cliente">
                    </div>
                    </div>
                </div>

            <div class="form-section">
                <h4>Datos de registro</h4>
                <div class="row">
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Ingrese el Numero de Serie de la Impresora">
                    </div>
                    <div class="col-12">
                        <div class="input-group">
                        <input type="text" class="form-control" placeholder="Ingrese el Correo del Tecnico">
                        </div>
                    </div>
                <div class="col-12">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Descripcion de la falla">
                    </div>
                </div>
                </div>
            </div>

            <div class="text-start mt-4">
                <button type="submit" class="btn btn-guardar">CREAR Y ASIGNAR</button>
            </div>
        </div>
        </div>

</body>
</html>